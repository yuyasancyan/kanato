<%= form_for @flower do |f| %>
    <%= f.label :hana %>
    <%= f.text_field :hana, :size => 140 %> 
    <%= f.submit "編集する" %>
  <% end %>

  <!--アカウント編集時に名前を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autofocus: true %>

    <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  </div>